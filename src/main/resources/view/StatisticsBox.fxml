<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@StatisticsBox.css" />
    </stylesheets>
    <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
    </padding>

    <StackPane fx:id="statisticsPanelPlaceholder" minWidth="150" maxHeight="200">
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </padding>
    </StackPane>

    <StackPane fx:id="pies" styleClass="stack-pane" prefHeight="200" VBox.vgrow="ALWAYS" >
        <PieChart fx:id="progressOverview" legendSide="RIGHT" title="Progress Overview"  startAngle="90"/>
    </StackPane>
</VBox>
